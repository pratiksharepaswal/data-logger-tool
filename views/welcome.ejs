<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1><i class="fab fa-node-js fa-3x"></i></h1>
      <p>Create an account or login</p>
      <a id="registerbtn" class="btn btn-primary btn-block mb-2">Register</a>
      <a href="/users/login" id="loginbtn" class="btn btn-secondary btn-block">Login</a>
    </div>
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.js"
  integrity="sha256-bd8XIKzrtyJ1O5Sh3Xp3GiuMIzWC42ZekvrMMD4GxRg=" crossorigin="anonymous"></script>
<script>
  let regbtn = document.getElementById("registerbtn");
  if (regbtn) {
    regbtn.onclick = (e) => {
      console.log("EEEE")
      axios.post("/registerbar", {
        message: "Register bar is clicked"
      }).then(res => {
        console.log("Response", res);
        window.location.href = "/users/register"
      }).catch(err => console.log)
    }
  }

  let logbtn = document.getElementById("loginbtn");
  if (logbtn) {
    logbtn.onclick = (e) => {
      axios.post("/loginbar", {
        message: "Login bar is clicked"
      }).then(res => {
        console.log("Response", res);
      }).catch(err => console.log)
    }
  }
</script>